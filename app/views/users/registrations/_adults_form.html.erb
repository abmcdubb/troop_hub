</div></div><div class="col-md-4"></div><div class="col-md-8">
<div class="col-md-6">
  <div class="form-group">
  <label class="form_label_font adults-form"> Add Skills: </label><br>
    <% @skills.each do |skill| %>                  
      <%= check_box_tag "user[skill_ids][]", skill.id, false, id: "skill_#{skill.id}", class: 'skills_check_box adults-form', :data => {:skill_id => skill.id} %>

      <label class="form_label_font adults-form"><%= skill.name %></label>
                    
      <%= text_field_tag "user[descriptions][]", nil, id: "skill_#{skill.id}", class: 'hidden_skills_text_field form-control-update', :data => {:skill_id => skill.id}, placeholder: placeholder(skill.name) %>  <br>
    <% end %>
</div></div><div class="col-md-6">
  <div class="form-group">
  <%if @user.skills%>
    <label class="form_label_font adults-form"> Remove Skills:<br>(check to remove) </label>
      <% @user.user_skills.each do |user_skill| %>
      <br>
      <%= check_box_tag "user[user_skill_ids][]", user_skill.id, false, id: "user_skill_#{user_skill.id}", class: 'skills_check_box adults-form' %>

      <label class="form_label_font adults-form"><%= user_skill.skill.name %>
        <% if user_skill.skill_description %>
          <span class="lblue"><%= user_skill.skill_description %></span>
        <% end %>
    </label>           
    <% end %>       

