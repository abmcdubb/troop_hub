<%=render partial: 'layouts/banner', locals: {:name => "Edit Troop Event", :left_option => "Troop Hub: The Social Media Site for Girl Scouts", :right_option => "Add This Even to Your Calendar" }%>

      <div class="inner-page padd">
      
        <!-- Single Item Start -->
        
        <div class="single-item">
          <div class="container">
            <!-- Shopping single item contents -->
            <div class="single-item-content">
              <div class="row">
                <div class="col-md-4 col-sm-5">
                  <!-- Product image -->
                  <img class="img-responsive img-thumbnail" src="http://www.justamorous.com/wp-content/uploads/2014/02/Girl-Scout-Cookies.jpg" alt="" />
                </div>
                <div class="col-md-8 col-sm-12">
                  <!-- Heading -->
                  <h3>Edit This Troop Event</h3>
                  <div class="row">
                    <div class="col-md-7 col-sm-12">
                      <!-- Single item details -->
                      <div class="item-details">
                        <!-- Paragraph -->
                        <p class="text-justify"></p>
                          <%= form_for(@troop_event) do |f| %>
                          <% if @troop_event.errors.any? %>
<ul>
  <% @troop_event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
                            <%= f.hidden_field :event_id %>
                            <%#= f.collection_radio_buttons(:event_id, @events, :id, :name) do |r|%>
                            <%#= r.radio_button %> <%#=r.label%>
                            <%#end%>
                            <label>Troop:<font color = "red">*</font></label></br>  
                            <%= f.collection_radio_buttons(:troop_id, @troops, :id, :name) do |r|%>
                            <%= r.radio_button %> <%=r.label%>
                            <%end%>
                            <br/><br/>
                            <%= f.label :start_time, "Start Time:" %><font color = "red">*</font><br>
                            <input id = "event_time" value = "<%=@troop_event.start_time.strftime("%m-%d-%Y %I:%M%p")%>"></input>
                            <%= f.hidden_field :start_time%>




                           
                         


                            <br/>
                            <%=f.label :location, "Where:" %>
                            <%= f.text_field :location, class: "form-control" %>
                            <br/>
                            <br/>

                            <p class = "formfield"> <%= f.label :detail, "Details:" %>
                            <%= f.text_area :detail, class: "form-control" %></p><br/>

                             <%= f.submit "Add to Calendar", class: "btn btn-danger" %>

                        <%end%> 
                       <%#= render 'form' %>
                      </div>
                       <div class="table-responsive">
                        <!-- Ordering form -->
                       
                      </div><!--/ Table responsive class end -->
                    </div>
                    
                  </div><!--/ Inner row end  -->
                </div>
              </div>
            </div>
          </div>
        </div>

<script>
$('#event_time').datetimepicker({
  timeFormat: "h:mm tt",
  dateFormat: "mm-dd-yy",
  controlType: "select",
  showSecond: false,
  altField: "#troop_event_start_time",
  altFieldTimeOnly: false,
  altFormat: "yy-mm-dd",
  altTimeFormat: "HH:mm:ss",
  altSeparator: " "
});
</script>